{
  "version": "1.0.0",
  "workflows": {
    "gmail-gemini-sms": {
      "name": "Gmail to Gemini to SMS Workflow",
      "description": "Core email processing workflow with AI response generation and SMS notifications",
      "file": "gmail_gemini_sms_workflow_enhanced.json",
      "version": "1.0.0",
      "requirements": ["1.1", "1.2", "1.3", "1.4", "1.8", "3.1", "3.2"],
      "dependencies": {
        "gmail": "OAuth2 credentials required - Configure in n8n interface",
        "gemini": "GEMINI_API_KEY environment variable required",
        "twilio": "TWILIO_ACCOUNT_SID, TWILIO_AUTH_TOKEN, TWILIO_FROM_NUMBER required",
        "postgres": "PostgreSQL database for n8n workflow state"
      },
      "healthChecks": [
        "gmail-trigger-active",
        "gemini-api-responsive",
        "twilio-sms-enabled",
        "workflow-executable"
      ],
      "nodes": {
        "gmail-trigger": {
          "type": "n8n-nodes-base.gmailTrigger",
          "description": "Monitors Gmail inbox for new unread messages",
          "requirement": "1.1"
        },
        "process-email": {
          "type": "n8n-nodes-base.code",
          "description": "Processes email content with HTML-to-text conversion",
          "requirement": "1.2"
        },
        "gemini-api": {
          "type": "n8n-nodes-base.code",
          "description": "Calls Google Gemini API for response generation",
          "requirement": "1.3"
        },
        "extract-response": {
          "type": "n8n-nodes-base.code",
          "description": "Extracts and processes Gemini API response",
          "requirement": "1.3"
        },
        "create-draft": {
          "type": "n8n-nodes-base.gmail",
          "description": "Creates draft reply in Gmail with thread preservation",
          "requirement": "1.4, 1.8"
        },
        "sms-rate-limit": {
          "type": "n8n-nodes-base.code",
          "description": "Validates SMS rate limits and prepares notification",
          "requirement": "3.2"
        },
        "send-sms": {
          "type": "n8n-nodes-base.twilio",
          "description": "Sends SMS notification via Twilio",
          "requirement": "3.1"
        }
      },
      "environmentVariables": {
        "required": [
          "GEMINI_API_KEY",
          "TWILIO_ACCOUNT_SID",
          "TWILIO_AUTH_TOKEN",
          "TWILIO_FROM_NUMBER",
          "USER_PHONE_NUMBER",
          "N8N_BASIC_AUTH_PASSWORD"
        ],
        "optional": [
          "SMS_DAILY_LIMIT",
          "SMS_PER_RUN_LIMIT",
          "GOOGLE_CLIENT_ID",
          "GOOGLE_CLIENT_SECRET"
        ]
      },
      "createdAt": "2024-01-01T00:00:00.000Z",
      "lastUpdated": "2024-01-01T00:00:00.000Z"
    }
  },
  "exportSettings": {
    "includeCredentials": false,
    "includeExecutionData": false,
    "validateSchema": true,
    "createBackup": true,
    "compressionEnabled": false
  },
  "importSettings": {
    "validateRequirements": true,
    "runHealthChecks": true,
    "createBackupBeforeImport": true,
    "rollbackOnFailure": true
  },
  "versioningSettings": {
    "autoVersion": true,
    "keepVersions": 10,
    "keepTaggedVersions": true,
    "compressionEnabled": false
  },
  "healthCheckSettings": {
    "timeout": 30000,
    "retries": 2,
    "categories": ["system", "workflow", "integration", "requirements"],
    "alertThreshold": 2,
    "monitoringInterval": 60000
  },
  "backupSettings": {
    "maxBackups": 10,
    "compressionEnabled": false,
    "retentionDays": 30
  }
}