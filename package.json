{
  "name": "pulse-ai-secretary",
  "version": "1.1.0",
  "description": "Privacy-first, always-on personal AI secretary",
  "main": "src/health.ts",
  "scripts": {
    "start": "ts-node src/health.ts",
    "dev": "ts-node --watch src/health.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:bricks": "MOCK_MODE=true BRICK_AUTH_KEY=test jest tests/bricks/contract.test.js",
    "test:workflow": "node tests/workflow-validation.test.js",
    "validate-env": "./validate-env.sh",
    "validate-startup": "ts-node src/validation.ts",
    "prestart": "npm run validate-env && npm run validate-startup",
    "import-workflow": "node scripts/import-workflow.js",
    "sms-status": "node src/sms.ts status",
    "sms-check": "node src/sms.ts check",
    "sms-reset": "node src/sms.ts reset",
    "sms-test": "node src/sms.ts test",
    "test:health": "node tests/health-check.test.js",
    "test:brick-client": "ts-node src/test-brick-client.ts",
    "smoke:local": "MOCK_MODE=false PULSE_BASE_URL=http://localhost:5678/webhook/webhook-brick node scripts/smoke-test-bricks.js",
    "smoke:staging": "MOCK_MODE=false PULSE_BASE_URL=${STAGING_URL:-http://staging:5678/webhook/webhook-brick} node scripts/smoke-test-bricks.js"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "ai",
    "secretary",
    "gmail",
    "gemini",
    "automation",
    "privacy",
    "n8n"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pulse-ai-secretary.git"
  }
}
