{
  "name": "pulse-ai-secretary",
  "version": "1.1.0",
  "description": "Privacy-first, always-on personal AI secretary",
  "main": "healthz.ts",
  "scripts": {
    "start": "ts-node healthz.ts",
    "dev": "ts-node --watch healthz.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:workflow": "node tests/workflow-validation.test.js",
    "validate-env": "./validate-env.sh",
    "validate-startup": "ts-node startup-validation.ts",
    "prestart": "npm run validate-env && npm run validate-startup",
    "import-workflow": "node workflows/import-workflow.js",
    "export-workflow": "node workflows/export-workflow.js",
    "validate-workflow": "node workflows/import-workflow.js validate",
    "workflow-version": "node workflows/workflow-versioning.js",
    "workflow-health": "node workflows/deployment-health-check.js",
    "workflow-demo": "node workflows/workflow-lifecycle-demo.js",
    "sms-status": "node sms-rate-limiter.js status",
    "sms-check": "node sms-rate-limiter.js check",
    "sms-reset": "node sms-rate-limiter.js reset",
    "sms-test": "node sms-rate-limiter.js test",
    "test:health": "node tests/health-check.test.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "ai",
    "secretary",
    "gmail",
    "gemini",
    "automation",
    "privacy",
    "n8n"
  ],
  "author": "Your Name",
