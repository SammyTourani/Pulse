# Pulse AI Secretary - Caddy Configuration Example
# Copy this file to Caddyfile and customize for your domain

# Replace with your actual domain
pulse.yourdomain.com {
    # Automatic HTTPS with Let's Encrypt
    # Replace with your actual email
    tls admin@yourdomain.com
    
    # Reverse proxy to n8n service
    reverse_proxy localhost:5678 {
        # Health check configuration
        health_uri /healthz
        health_interval 30s
        health_timeout 10s
        
        # Load balancing (for future scaling)
        lb_policy round_robin
        
        # Request headers
        header_up Host {upstream_hostport}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Security headers
    header {
        # HTTP Strict Transport Security
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "DENY"
        
        # XSS protection
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # Content Security Policy (adjust as needed)
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' wss: https:;"
        
        # Remove server information
        -Server
    }
    
    # Rate limiting to prevent abuse
    rate_limit {
        zone pulse_rl {
            key {remote_host}
            events 100
            window 1m
        }
    }
    
    # Logging
    log {
        output file /var/log/caddy/pulse.log {
            roll_size 100mb
            roll_keep 5
            roll_keep_for 720h
        }
        format json
        level INFO
    }
    
    # Optional: Basic authentication for additional security
    # Uncomment and customize if needed
    # basicauth {
    #     admin $2a$14$hashed_password_here
    # }
}

# Optional: Separate subdomain for health checks
health.yourdomain.com {
    tls admin@yourdomain.com
    
    reverse_proxy localhost:3001 {
        health_uri /healthz
        health_interval 30s
        health_timeout 5s
    }
    
    # Minimal security headers for health endpoint
    header {
        X-Content-Type-Options "nosniff"
        -Server
    }
    
    # More restrictive rate limiting for health endpoint
    rate_limit {
        zone health_rl {
            key {remote_host}
            events 30
            window 1m
        }
    }
}

# Optional: Redirect www to non-www
www.pulse.yourdomain.com {
    redir https://pulse.yourdomain.com{uri} permanent
}

# Global options
{
    # Email for Let's Encrypt notifications
    email admin@yourdomain.com
    
    # ACME CA server (use staging for testing)
    # acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
    
    # Default SNI
    default_sni pulse.yourdomain.com
    
    # Admin API (optional, for monitoring)
    admin localhost:2019
    
    # Global logging
    log {
        level INFO
    }
}